<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wish_list_item_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_place_margin"
    android:background="@color/place_list_item_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/list_item_place_padding"
    android:textAppearance="@style/TextAppearance.AppCompat.Large">

    <TextView
        android:id="@+id/placeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="placeNameTextView"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/dataCreatedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="dateCreatedTextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/reasonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="reasonTextView"
        android:textSize="18sp" />
</LinearLayout>